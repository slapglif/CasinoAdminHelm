version: '3'

services:
  postgres:
    image: postgres:13
    volumes:
      - postgres-data:/var/lib/postgresql/data
    environment:
      POSTGRES_USER: ${POSTGRES_USER}
      POSTGRES_PASSWORD: ${POSTGRES_PASSWORD}
      POSTGRES_DB: ${POSTGRES_DB}
    networks:
      - my-network

  redis:
    image: redis:6
    volumes:
      - redis-data:/data
    networks:
      - my-network

  myapp:
    build:
      context: .
      dockerfile: Dockerfile
    image: myapp
    ports:
      - "${APP_PORT}:8080"
    environment:
      POSTGRES_USER: ${POSTGRES_USER}
      POSTGRES_PASSWORD: ${POSTGRES_PASSWORD}
      POSTGRES_DB: ${POSTGRES_DB}
      REDIS_HOST: redis
      REDIS_PORT: 6379
    volumes:
      - logs:/app/logs
    depends_on:
      - postgres
      - redis
    networks:
      - my-network

volumes:
  postgres-data:
  redis-data:
  logs:

networks:
  my-network:
